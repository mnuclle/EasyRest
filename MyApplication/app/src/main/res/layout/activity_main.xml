<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LytContenedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#314550">
    <TextView
        android:id="@+id/NombreApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="easyrest"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"
        android:background="#F38129"
        android:textColor="#FFFFFF"
        android:layout_margin="10px"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_weight="0"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearImagen"
        android:gravity="center"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:background="#314550"
            android:layout_margin="25dp"
            android:src="@drawable/logo"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearBarra"
        android:layout_weight="0.4">

        <Spinner
            android:id="@+id/cmbTipoUsuario"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:prompt="@string/msgTipoUsuario"
            android:spinnerMode="dropdown"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:overlapAnchor="false"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearBarra2"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="0.3">

        <EditText android:id="@+id/txtUsuario"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="25sp"
            android:ellipsize="start"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@drawable/edit_text_sesion"
            android:layout_gravity="center_horizontal"
            android:hint="Ingrese su usuario"/>

        <EditText android:id="@+id/txtContraseña"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_text_sesion"
            android:layout_gravity="center_horizontal|center_vertical"
            android:hint="Ingrese su constraseña"
            android:padding="5dp"
            />

        <Button android:id="@+id/btnIniciarSesion"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/botonformato"
            />

    </LinearLayout>
</LinearLayout>