<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#314550"
    >

    <TextView
        android:id="@+id/NombreApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EASYREST"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"
        android:background="#476B85"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_weight="0"/>
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:background="#314550"
            android:layout_margin="35dp"
            android:src="@drawable/logo"
            android:layout_weight="0"
            />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button android:id="@+id/btnVerPedido"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Ver Pedido"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="25dp"
            android:background="@drawable/botonformato"
            android:layout_weight="1"
            />
        <Button android:id="@+id/btnVerCuenta"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Ver Resumen de Cuenta"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="25dp"
            android:background="@drawable/botonformato"
            android:layout_weight="1"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button android:id="@+id/btnLlamarMozo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="LLamar al Mozo"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="25dp"
            android:background="@drawable/botonformato"
            android:layout_weight="1"
            />

        <Button android:id="@+id/btnSalir"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Salir"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="25dp"
            android:background="@drawable/botonformato"
            android:layout_weight="1"
            />
    </LinearLayout>


</LinearLayout>