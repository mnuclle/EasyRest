<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="#314550">
    <TextView android:id="@+id/txtTituloDialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#F38129"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:layout_weight="0"
        android:text="Atención"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        />
    <TextView
        android:id="@+id/txtEstaSeguro"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:background="#314550"
        android:gravity="center"
        android:layout_weight="1"
        android:text="¿Está seguro que desea salir? Se cerrará la sesión actual."
        />
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_weight="0"-->
        <!--android:background="#476B85"-->
        <!--/>-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="#314550"
        android:layout_weight="0">

        <Button
            android:id="@+id/dialogSalirButtonAceptar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Aceptar"
            android:layout_margin="10dp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="25sp"
            android:background="@drawable/botonformato"
            android:layout_weight="1"
            />
        <!--<View-->
            <!--android:layout_width="2dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="0"-->
            <!--android:background="#476B85"-->
            <!--/>-->
        <Button
            android:id="@+id/dialogSalirButtonCancelar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_margin="10dp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="25sp"
            android:background="@drawable/botonformato"
            android:layout_weight="1"

            />

    </LinearLayout>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_weight="0"-->
        <!--android:background="#476B85"-->
        <!--/>-->
</LinearLayout>